<div class="main-container"  style="background-color: #ffffff" >

  <section class="text-center imagebg parallax  banner_height" data-overlay="4">
    <div class="background-image-holder">
      <div>
      </div>
      <%= image_tag 'facilityinner/gallery_photo/photo-8.jpg', alt: 'background' %>
    </div>
    <div class="img-space">
    </div>
  </section>
  <%#= render 'layouts/slider' %>

  <span class="clearfix"></span>

  <div class="container" style="padding-top: 25px;">
    <ol class="breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li class="active">News & Events</li>
    </ol>
  </div>

  <span class="clearfix"></span>

  <div class="container ph-section">
    <div class="col-md-8 col-sm-8 col-xs-12 left events">

      <% if @events.present? %>
          <% @events.each do |event| %>

              <div class="col-sm-6 " style="height: 500px">
                <div class="  feature-1">
                  <%= image_tag event.photo.present? ? event.photo.url : 'facilityinner/gallery_photo/no-image-available.png', class: 'img-responsive', height: 250, width: 360 %>
                  <div class="feature__body boxed boxed--border">
                    <h5>
                      <%= event.name %>
                    </h5>
                    <p>
                      <%= truncate(event.description, length: 60) %>
                    </p>

                    <% if event.description.present?%>
                        <% unless event.description.length <= 100 %>
                            <%= link_to 'Learn more', event_single_path %>
                        <% end %>
                    <% end %>
                  </div>
                </div>
                <!--end feature-->
              </div>

              <% unless @events.count/2 != 0 %>
                  <span class="clearfix"></span>
              <% end %>

          <% end %>

      <% else %>

          <%= image_tag 'facilityinner/gallery_photo/no-event.jpg' %>

      <% end %>

      <%= will_paginate @events %>

