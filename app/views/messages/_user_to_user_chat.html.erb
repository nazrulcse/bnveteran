<div class="modal-header">
  <button type="button" class="close pull-right close-btn" data-dismiss="modal">&times;</button>
  <%= link_to messages_path, class:'pull-left angle-left-arrow', remote:true do %>
      <i class="fa fa-angle-left" aria-hidden="true"></i>
  <% end %>


  <div class=" receiver-chat-profile ">

    <div class="user-to-user-msg-modal-header-avatar ">
      <%= link_to user_path(@user.id), remote:true do %>
          <%= image_tag  @user.avatar.present? ? @user.avatar.url : 'default-profile-picture.png', class: 'img-responsive img-circle' %>
      <% end %>
    </div>

    <div class="user-to-user-msg-modal-header-profile ">
      <h5><%= @user.name %></h5>
      <h5><%= @user.email %></h5>
    </div>


  </div>



</div>

<div class="modal-body msg-modal-body" id="messageBody">

<%= render 'users/conversation_row' %>

</div>

<div class="modal-footer chatting-background" style="background-color: #F1F5FB; border-radius: 5px;">
  <div class="chatting-area">


    <div class="chatting-form" id="chat-inbox">
      <%= form_for @message, remote:true do |f| %>
          <%= f.text_field :content, class:' chat-content form-control' %>
          <%= f.hidden_field :room_id, value:@room.id %>
          <%= f.hidden_field :recipient_id, value:@user.id %>
          <!--<%#= link_to '#' do %>-->
              <!--<i class="fa fa-smile-o emoji-position" aria-hidden="true"></i>-->
          <!--<%# end %>-->
          </div>
      <% end %>



