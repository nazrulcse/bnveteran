<%= form_for @news do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, placeholder: 'Title', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, placeholder: 'Details about the news', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit (@event.persisted? ? :update : :create), class: 'btn btn-primary' %>
    </div>
<% end %>
